<?xml version="1.0" encoding="utf-8" standalone="no"?>
<rss xmlns:atom="http://www.w3.org/2005/Atom" version="2.0">
<channel>
  <title>tlunter.com Blog</title>
  <description>Blog posts by Todd Lunter</description>
  <link>http://www.tlunter.com</link>
  <lastBuildDate><%= @posts.last.updated_at.strftime("%a, %d %b %Y %H:%M:%S %z") %></lastBuildDate>
  <pubDate><%= @posts.last.updated_at.strftime("%a, %d %b %Y %H:%M:%S %z") %></pubDate>
  <language>en</language>
  <atom:link href="http://www.tlunter.com/posts.rss" rel="self" type="application/rss+xml" />
  <% @posts.each do |post| %>
  <item>
    <title><%= post.title %></title>
    <description><![CDATA[<%= post.body %>]]></description>
    <link>http://www.tlunter.com/posts/<%= post.link %></link>
    <guid>http://www.tlunter.com/posts/<%= post.link %></guid>
    <pubDate><%= post.updated_at.strftime("%a, %d %b %Y %H:%M:%S %z") %></pubDate>
  </item>
  <% end %>
</channel>
</rss>
